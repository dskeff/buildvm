#!/bin/bash

# Set here variables for consistency in shell scripting and those which are likely to change

export CP=/bin/cp
export RM=/bin/rm

export LOGFILE=/tmp/allcommands.log
export BINHOME=/root/bin/setup
export SCHOME=/root/bin/backup
export SCRIPTHOME=/root/bin/scripts
export POT_HOME=/home/db2psc/pot_icp
export FIRST_BOOT_FLAG=/var/log/firstboot.log
export SECOND_BOOT_FLAG=/var/log/secondboot.log
export LAB_DONE_FLAG=/var/log/lab.done
export DOWNLOADDIR=/root/download

export SSH="/bin/ssh -q -o PreferredAuthentications=publickey \
            -o StrictHostKeyChecking=no"
export SCP="/bin/scp -q -o StrictHostKeyChecking=no"

export POT_LAB_TAR_GZ=pot_icp.tar.gz
export DOCKER_LOAD_IMAGE=ibm-cloud-private-x86_64-2.1.0.1.tar.gz
export DOCKER_DRIVER=icp_docker_17.09_rhel_x86_64.bin
export ICP_HOMEDIR=$DOWNLOADDIR/icp2.1.0.1
export ICP_IMAGEDIR=$ICP_HOMEDIR/cluster/images
